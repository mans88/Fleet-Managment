@model FleetManagment.Shared.TransfertObject.ModelTO

@{
    ViewData["Title"] = "CreateModel";
}

<h1>CreateModel</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateModel">
